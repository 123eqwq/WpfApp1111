<Window x:Class="WpfApp1111.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить проект" Height="350" Width="350" Background="White">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Добавить проект" FontSize="18"
                       Margin="0,0,0,10" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Название проекта"/>
            <TextBox x:Name="ProjectNameTextBox" Margin="5"/>
            <TextBlock Text="Описание проекта"/>
            <TextBox x:Name="ProjectDescriptionTextBox" Margin="5" Height="40"/>
            <TextBlock Text="Дата начала"/>
            <DatePicker x:Name="StartDatePicker" Margin="5"/>
        </StackPanel>
        <Button Content="Добавить проект" Width="300" Height="30"
                HorizontalAlignment="Left" Margin="10,205,0,79"
                Click="AddButton_Click"/>
    </Grid>
</Window>
